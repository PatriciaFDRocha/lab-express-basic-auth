<h2>Sign up</h2>

<form action="/signup" method="post">
    <label>Username</label>
    <input type="text" name="username" required/>

    <br>

    <label>Password</label>
    <input type="password" name="password" required/>

    <br>
    <button type="submit">Create account</button>
</form>

{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}